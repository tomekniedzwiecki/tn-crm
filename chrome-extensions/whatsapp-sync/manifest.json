{
  "manifest_version": 3,
  "name": "WhatsApp CRM Sync",
  "version": "1.7.1",
  "description": "Synchronizuje wiadomo≈õci WhatsApp z CRM + AI podpowiedzi",
  "permissions": [
    "storage",
    "alarms",
    "debugger",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.supabase.co/*",
    "https://crm.tomekniedzwiecki.pl/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
