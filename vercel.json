{
  "rewrites": [
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/leads", "destination": "/leads.html" },
    { "source": "/lead", "destination": "/lead.html" },
    { "source": "/pipeline", "destination": "/pipeline.html" },
    { "source": "/calendar", "destination": "/calendar.html" },
    { "source": "/offers", "destination": "/offers.html" },
    { "source": "/offer", "destination": "/offer.html" },
    { "source": "/discount-codes", "destination": "/discount-codes.html" },
    { "source": "/orders", "destination": "/orders.html" },
    { "source": "/outreach", "destination": "/outreach.html" },
    { "source": "/settings", "destination": "/settings.html" },
    { "source": "/audit", "destination": "/audit.html" },
    { "source": "/checkout", "destination": "/checkout/index.html" },
    { "source": "/checkout/success", "destination": "/checkout/success.html" },
    { "source": "/checkout/error", "destination": "/checkout/error.html" },
    { "source": "/kod/:code", "destination": "/kod.html" },
    { "source": "/p/:token", "destination": "/client-offer.html" },
    { "source": "/tn-todo", "destination": "/tn-todo/index.html" },
    { "source": "/tn-todo/", "destination": "/tn-todo/index.html" },
    { "source": "/tn-todo/boards", "destination": "/tn-todo/boards.html" },
    { "source": "/tn-todo/board", "destination": "/tn-todo/board.html" },
    { "source": "/tn-todo/my-tasks", "destination": "/tn-todo/my-tasks.html" },
    { "source": "/tn-stack", "destination": "/tn-stack/index.html" },
    { "source": "/tn-stack/", "destination": "/tn-stack/index.html" },
    { "source": "/tn-stack/dashboard", "destination": "/tn-stack/dashboard.html" },
    { "source": "/tn-stack/categories", "destination": "/tn-stack/categories.html" },
    { "source": "/", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://unpkg.com https://js.stripe.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.stripe.com https://api.tpay.com https://openapi.sandbox.tpay.com; frame-src https://js.stripe.com https://secure.tpay.com; object-src 'none'; base-uri 'self';" }
      ]
    }
  ]
}
